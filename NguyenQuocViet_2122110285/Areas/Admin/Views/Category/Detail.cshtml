@model NguyenQuocViet_2122110285.Context.Category

@{
    ViewBag.Title = "Chi tiết danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Chi tiết danh mục</h1>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Thông tin danh mục</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-3">Tên danh mục:</dt>
                                <dd class="col-sm-9">@Model.Name</dd>

                                <dt class="col-sm-3">Mô tả:</dt>
                                <dd class="col-sm-9">@Model.Description</dd>

                                <dt class="col-sm-3">Danh mục cha:</dt>
                                <dd class="col-sm-9">@(ViewBag.ParentCategoryName ?? "Không có")</dd>

                                <dt class="col-sm-3">Thứ tự hiển thị:</dt>
                                <dd class="col-sm-9">@Model.DisplayOrder</dd>

                                <dt class="col-sm-3">Trạng thái:</dt>
                                <dd class="col-sm-9">
                                    @if (Model.Status)
                                    {
                                        <span class="badge badge-success">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">Không hoạt động</span>
                                    }
                                </dd>

                                <dt class="col-sm-3">Ngày tạo:</dt>
                                <dd class="col-sm-9">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm:ss")</dd>

                                <dt class="col-sm-3">Ngày cập nhật:</dt>
                                <dd class="col-sm-9">@Model.ModifiedDate?.ToString("dd/MM/yyyy HH:mm:ss")</dd>
                            </dl>
                        </div>
                        <div class="col-md-4">
                            @if (!string.IsNullOrEmpty(Model.ImageURL))
                            {
                                <div class="text-center">
                                    <img src="~/Content/images/items/@Model.ImageURL" alt="@Model.Name" class="img-fluid img-thumbnail" style="max-width: 300px;" />
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.CategoryID }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    </div>
</div>
