@model NguyenQuocViet_2122110285.Context.User

@{
    ViewBag.Title = "Chi tiết người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Chi tiết người dùng</h1>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Thông tin người dùng</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Họ và tên:</dt>
                        <dd class="col-sm-9">@Model.FullName</dd>

                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">Số điện thoại:</dt>
                        <dd class="col-sm-9">@Model.Phone</dd>

                        <dt class="col-sm-3">Địa chỉ:</dt>
                        <dd class="col-sm-9">@Html.Raw(Model.Address)</dd>

                        <dt class="col-sm-3">Vai trò:</dt>
                        <dd class="col-sm-9">
                            @if (Model.Role.ToString() == "1")
                            {
                                <span class="badge badge-primary">Quản trị viên</span>
                            }
                            else
                            {
                                <span class="badge badge-info">Khách hàng</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Trạng thái:</dt>
                        <dd class="col-sm-9">
                            @if (Model.Status.HasValue && Model.Status.Value)
                            {
                                <span class="badge badge-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Không hoạt động</span>
                            }
                        </dd>

                        @* <dt class="col-sm-3">Ngày tạo:</dt>
                        <dd class="col-sm-9">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm:ss")</dd> *@

                        @* <dt class="col-sm-3">Ngày cập nhật:</dt>
                        <dd class="col-sm-9">@Model.ModifiedDate?.ToString("dd/MM/yyyy HH:mm:ss")</dd> *@
                    </dl>
                </div>
                <div class="card-footer">
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.UserID }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    </div>
</div>
