@model NguyenQuocViet_2122110285.Models.OrderModel
@{
    ViewBag.Title = "Đặt hàng thành công";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-content padding-y">
    <div class="container">
        <div class="row">
            <div class="col-md-8 mx-auto text-center">
                <div class="card">
                    <div class="card-body">
                        <div class="mb-4">
                            <i class="fa fa-check-circle text-success" style="font-size: 5em;"></i>
                        </div>
                        <h2 class="mb-3">Cảm ơn bạn đã đặt hàng!</h2>
                        <p class="text-muted mb-4">
                            Đơn hàng của bạn đã được đặt thành công.<br>
                            Mã đơn hàng của bạn là: <strong>@Model.OrderCode</strong>
                        </p>
                        <div class="alert alert-info">
                            <p class="mb-0">
                                Chúng tôi sẽ gửi email xác nhận đơn hàng đến <strong>@Model.ShippingEmail</strong><br>
                                Vui lòng kiểm tra email của bạn.
                            </p>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-md-6">
                                <h5>Thông tin giao hàng</h5>
                                <p>
                                    @Model.ShippingName<br>
                                    @Model.ShippingPhone<br>
                                    @Model.ShippingAddress
                                </p>
                            </div>
                            <div class="col-md-6 text-right">
                                <h5>Tổng thanh toán</h5>
                                <h3 class="text-success">@Model.TotalAmount.ToString("N0") đ</h3>
                            </div>
                        </div>
                        <hr>
                        <div class="buttons">
                            <a href="@Url.Action("Details", new { id = Model.OrderId })" class="btn btn-primary">
                                <i class="fa fa-eye"></i> Xem chi tiết đơn hàng
                            </a>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">
                                <i class="fa fa-shopping-bag"></i> Tiếp tục mua sắm
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
